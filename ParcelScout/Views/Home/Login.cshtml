
@{
    ViewBag.Title = "Login";
}



<div class="row">

    <div id="login-form" class="form-principal
            col-xs-10 col-xs-push-1
            col-sm-5 col-sm-push-6
            col-md-4 col-md-push-7">

        <div class="row">
            <div class="form-header">&nbsp;Iniciar Sesión</div>
        </div>

        <br><br>

        <div class="row">
            <form action="@Url.Action("Login", "Home")" method="post" class="col-xs-10 col-xs-push-1">
                
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                }

                <div class="form-group">
                    <label for="correo">Correo:</label>
                    <input type="text" class="form-control" name="correo" id="correo">
                </div>
                <div class="form-group">
                    <label for="contrasena">Contraseña:</label>
                    <input type="password" class="form-control" name="password" id="password">
                </div>

                <button class="btn btn-seagreen">Ingresar</button>
            </form>
        </div>


        <br><br>
    </div>
    <!--- ROW END --->
</div>