
@{
            ViewBag.Title = "EditarRegistro";
}


<div class="modal-header modal-header-sienna">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Nuevo Usuario</h4>
</div>
<div class="modal-body">

    <div class="row">

        <form action="" class="col-xs-10 col-xs-push-1">

            <input type="hidden" id="usuario-id" value="@ViewBag.IdUsuario" />

            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control input-sm" name="nombre" id="edit-nombre">
            </div>
            <div class="form-group">
                <label for="cuenta">Cuenta:</label>
                <input type="text" class="form-control input-sm" name="cuenta" id="edit-cuenta">
            </div>
            <div class="form-group">
                <label for="correo">Correo:</label>
                <input type="email" class="form-control input-sm" name="correo" id="edit-correo">
            </div>
            <!--
            <div class="form-group">
                <label for="password-viejo">Contraseña anterior:</label>
                <input type="password" class="form-control input-sm" name="password-viejo" id="edit-password-viejo">
            </div>
            -->
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" class="form-control input-sm" name="password" id="edit-password">
            </div>
            <div class="form-group">
                <label for="comprobacion">Comprobar contraseña:</label>
                <input type="password" class="form-control input-sm" name="comprobacion" id="edit-comprobacion">
            </div>
            <div class="form-group">
                <label for="permisos">Permisos:&nbsp;</label><select class="form-control" name="permisos" id="edit-permiso">
                    <option value="solo_lectura">Solo Lectura</option>
                    <option value="admin">Administrador</option>
                </select>
            </div>

            <button type="button" class="btn btn-seagreen pull-right shadow" onclick="guardarCambios()">Guardar Cambios</button>
        </form>

        <!--Row form end-->
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
</div>
   