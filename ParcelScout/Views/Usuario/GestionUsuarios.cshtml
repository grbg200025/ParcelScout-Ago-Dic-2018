
@{
    ViewBag.Title = "Gestion Usuarios";
}

<div class="row">
    

<!--ROW END-->
</div>

<div class="row">

    <div id="datatable-container" class="container">
       <br />
        <br />
        <div class="row">
            <div class="btn-group">
                <button type="button" onclick="nuevo()" class="btn btn-seagreen">Nuevo</button>
                <button type="button" onclick="edit()" class="btn btn-seagreen">Editar</button>
                <button type="button" onclick="eliminar()" class="btn btn-seagreen">Eliminar</button>
            </div>
        </div>

        <br />
        <div class="row">
            <table id="table-usuarios" class="table">
                <thead class="datatable-header">
                    <tr>
                        <th id="id" hidden>Id</th>
                        <th>Nombre</th>
                        <th>Cuenta</th>
                        <th>Correo</th>
                        <th>Rol</th>
                    </tr>
                </thead>
                <!--Should be empty for ajax data load, or match header th to td count for manual filling-->
                <tbody>
              
                </tbody>
            </table>
        </div>
        

    </div>

<!--ROW END-->
</div>


<div class="modal fade" id="modal-registro" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header modal-header-sienna">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Nuevo Usuario</h4>
            </div>
            <div class="modal-body">
              
                <div class="row">

                <form action="" class="col-xs-10 col-xs-push-1">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control input-sm" name="nombre" id="nombre">
                    </div>
                    <div class="form-group">
                        <label for="cuenta">Cuenta:</label>
                        <input type="text" class="form-control input-sm" name="cuenta" id="cuenta">
                    </div>
                    <div class="form-group">
                        <label for="correo">Correo:</label>
                        <input type="email" class="form-control input-sm" name="correo" id="correo">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <input type="password" class="form-control input-sm" name="password" id="password">
                    </div>
                    <div class="form-group">
                        <label for="comprobacion">Comprobar contraseña:</label>
                        <input type="password" class="form-control input-sm" name="comprobacion" id="comprobacion">
                    </div>
                    <div class="form-group">
                        <label for="permisos">Permisos:&nbsp;</label><select class="form-control" name="permisos" id="permiso">
                            <option value="solo_lectura">Solo Lectura</option>
                            <option value="admin">Administrador</option>
                        </select>
                    </div>

                    <button type="button" class="btn btn-seagreen pull-right shadow" onclick="registrar()">Registrar</button>
                </form>

                <!--Row form end-->
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>


<div class="modal fade" id="modal-edit-registro" role="dialog">

    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" id="modal-edit-registro-content">
            
        </div>

    </div>

</div>