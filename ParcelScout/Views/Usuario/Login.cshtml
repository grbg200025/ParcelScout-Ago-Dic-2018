
@{
    ViewBag.Title = "Login";
}

<div class="row"><br><br></div>

<div class="row">

    <div class="form-principal
            col-xs-10 col-xs-push-1
            col-sm-5 col-sm-push-6
            col-md-4 col-md-push-7">

        <div class="row">
            <div class="form-header">&nbsp;Iniciar Sesión</div>
        </div>

        <br><br>

        <div class="row">
            <form action="" class="col-xs-10 col-xs-push-1">
                <div class="form-group">
                    <label for="cuenta">Cuenta:</label>
                    <input type="text" class="form-control" name="cuenta" id="cuenta">
                </div>
                <div class="form-group">
                    <label for="contrasena">Contraseña:</label>
                    <input type="text" class="form-control" name="contrasena" id="password">
                </div>

                <button class="btn btn-seagreen">Ingresar</button>
            </form>
        </div>

        
        <br><br>
    </div>
    <!--- ROW END --->
</div>